<div class="row">
        <div class="row">
    @{
        try
        {
                foreach (var dentistry in Model)
            {
                    @if (@dentistry.categoryId == 1)
                {
                        <div class="col-lg-4" style="width:18rem;margin-right:35px; margin-bottom:15px">
                            <img src="@dentistry.img" class="dend-img-top" alt="@dentistry.img">
                            <div class="dend-body">
                                <h5 class="dend-title">@dentistry.name</h5>
                                <p class="dend-text">@dentistry.shortDesc</p>
                                <p>Цена: @dentistry.price</p>
                                <a class="btn btn-primary mb-1" href="#" onclick="location.href = '@Url.Action("AddToDent", "ShopDent", new { id = dentistry.id })'">В корзину</a>
                            </div>
                        </div>

                }
            }
        }
        catch (Exception)
        {
            throw;
        }
    }
        </div>
</div>