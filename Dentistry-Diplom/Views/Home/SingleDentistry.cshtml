<div class="dend mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.img" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="dend-body">
                <h5 class="dend-title">@Model.name</h5>
                <p class="dend-text">@Model.longDesc</p>
                <p class="dend-text">@Model.price.ToString("c")</p>
            </div>
        </div>
        <a class="btn btn-primary mb-1" href="#" onclick="location.href = '@Url.Action("AddToDent", "ShopDent", new { id = Model.id })'">В корзину</a>
        @Html.ActionLink("Удалить", "DeleteDentistry", "Home", new { _id = Model.id },
        new { onclick = "return confirm('Вы уверены, что хотите удалить товар?')", @class = "btn btn-danger" })

    </div>
</div>