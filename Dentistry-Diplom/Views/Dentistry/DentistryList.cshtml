<table class="table">
    <thead>
        <tr>
            <th scope="col">№</th>
            <th scope="col">Название консоли</th>
            <th scope="col">Описание</th>
            <th scope="col">Фото</th>
            <th scope="col">Редактирование</th>
            <th scope="col">Удаление</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
            foreach (var dentistry in Model)
            {
                <tr>
                    <th scope="row">@Html.Raw(i++)</th>
                    <td>@dentistry.name</td>
                    <td>@dentistry.shortDesc</td>
                    <td><img src=@dentistry.img alt="@dentistry.name" width="50px" /></td>
                    <td><a type="button" class="btn btn-primary" href="#" onclick="location.href = '@Url.Action("EditDentistry", "Dentistry", new { _id = dentistry.id })'">Редактировать</a></td>
                    <td>
                        @Html.ActionLink("Удалить", "DeleteDentistrye", "Home", new { _id = dentistry.id },
                             new { onclick = "return confirm('Вы уверены, что хотите удалить товар?')", @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>