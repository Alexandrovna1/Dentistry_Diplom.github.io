@model Dentistry_Diplom.Data.Models.DentistryInfo

<form class="p-a-1" asp-action="EditDentistry" method="post" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-6">
            <input hidden="hidden" class="form-control" asp-for="id" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="name">Наименование консоли</label>
            <input class="form-control" asp-for="name" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="shortDesc">Краткое описание</label>
            <input class="form-control" asp-for="shortDesc" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="longDesc">Полное описание</label>
        <textarea class="form-control" rows="3" asp-for="longDesc"></textarea>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label asp-for="price">Цена</label>
            <input type="number" class="form-control" asp-for="price" />
        </div>
        <div class="form-group col-md-5">
            <label asp-for="categoryId">ID категории</label>
            <input type="number" class="form-control" asp-for="categoryId" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-check col-md-5">
            <label asp-for="isFavourite">
                <input type="checkbox" class="form-check-input" asp-for="isFavourite" />
                Добавить на главную страницу
            </label>
        </div>
        <div class="form-check col-md-5">
            <label asp-for="available">
                <input type="checkbox" class="form-check-input" asp-for="available" />
                Доступен к покупке
            </label>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="img">Картинка</label>
        <input asp-for="img" hidden="hidden" />
        <input asp-for="img" type="file" name="uploadedFile" />
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
