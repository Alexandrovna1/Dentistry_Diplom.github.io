<h4 style="text-align:center">Категории:</h4>

@foreach (var category in Model)
{
    string Class = (category.categoryName == ViewBag.SelectedCategory) ? "btn btn-block btn-primary" : "btn btn-block btn-default";
    <a class=@Class
       asp-action="Index"
       asp-controller="Home"
       asp-route-category="@category.id"
       asp-route-page="1">
        @category.categoryName
    </a>
}