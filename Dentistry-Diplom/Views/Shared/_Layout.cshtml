                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" aria-current="page" onclick="location.href = '@Url.Action("Index","Home")'" href="/">Главная</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button">Категории</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#" onclick="location.href = '@Url.Action("StationarCategory", "Category")'">Стационарные</a></li>
                                <li><a class="dropdown-item" href="#" onclick="location.href = '@Url.Action("PortativeCategory", "Category")'">Портативные</a></li>
                            </ul>
